{
  "name": "toolkit",
  "description": "Store more front-end related tool Libraries",
  "scripts": {
    "clean": "rimraf --glob '**/{node_modules,dist,esm,lib,.turbo,.next}'",
    "build": "pnpm -r --workspace-concurrency=1 run build",
    "test": "pnpm -r --workspace-concurrency=1 run test",
    "test:coverage": "pnpm -r --workspace-concurrency=1 run test:coverage",
    "docs": "pnpm -r run docs",
    "doc": "pnpm -r run doc",
    "append-api": "node scripts/append-api-to-readme.ts",
    "eslint": "eslint --ext .js,.ts --fix ./packages/**/src",
    "dev": "pnpm -r run dev",
    "dev:play": "pnpm -F play dev",
    "version-packages": "changeset version",
    "version-packages:dry-run": "changeset version --dry-run",
    "prepublishOnly": "pnpm run build && pnpm run test && pnpm run eslint && pnpm run doc",
    "release": "pnpm run prepublishOnly && changeset publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run eslint",
      "prettier .prettierrc.js --write"
    ]
  },
  "keywords": [
    "util",
    "toolkit",
    "dom",
    "dom-toolkit",
    "es",
    "es-toolkit",
    "ts-toolkit",
    "javascript",
    "typescript"
  ],
  "author": {
    "name": "GavinRay",
    "email": "gavinraydev@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.21.0",
    "@babel/eslint-parser": "^7.14.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.14.5",
    "@changesets/cli": "^2.29.4",
    "@testing-library/jest-dom": "^5.16.5",
    "@types/jest": "^26.0.23",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^15.12.2",
    "ajv": "^7.2.4",
    "babel-jest": "^27.0.2",
    "babel-loader": "^9.1.2",
    "clean-webpack-plugin": "^4.0.0",
    "core-js": "^3.29.0",
    "docdash": "^1.2.0",
    "eslint-config-lavy": "^1.0.1-Alpha.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-canvas-mock": "^2.5.0",
    "jest-html-reporter": "^3.4.1",
    "jsdoc": "^3.6.10",
    "jsdoc-to-markdown": "^7.1.1",
    "jsdom": "^16.7.0",
    "lavy": "^1.0.1-Alpha.2",
    "lint-staged": "^11.0.0",
    "markdown-toc": "^1.2.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^27.0.3",
    "ts-loader": "^9.4.2",
    "ts-node": "^10.0.0",
    "typedoc": "^0.28.4",
    "typedoc-plugin-markdown": "^4.6.3",
    "typescript": "^5.8.3",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.1",
    "webpack-dev-server": "^4.11.1"
  }
}